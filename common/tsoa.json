{
  "entryFile": "./src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "./src/controllers/**/*.ts"
  ],
  "spec": {
    "outputDirectory": "./src/schema",
    "specVersion": 3,
    "basePath": "",
    "baseRoutePrefix": "",
    "description": "Discura API - Discord Bot Management Platform",
    "name": "Discura API",
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "tags": [
      {
        "name": "Auth",
        "description": "Authentication related endpoints"
      },
      {
        "name": "Bots",
        "description": "Discord bot management endpoints"
      },
      {
        "name": "LLM",
        "description": "Large Language Model integration endpoints"
      },
      {
        "name": "Tools",
        "description": "Bot tool/function calling endpoints"
      },
      {
        "name": "Knowledge",
        "description": "Knowledge base management endpoints"
      }
    ],
    "yaml": true,
    "outputFormat": "both"
  },
  "routes": {
    "routesDir": "./src/routes",
    "routesPrefix": "",
    "middleware": "express",
    "authenticationModule": "./src/auth/authentication.ts",
    "noImplicitAdditionalProperties": "throw-on-extras"
  },
  "modelsPathGlobs": [
    "./src/types/api/**/*.ts",
    "./src/types/api/tsoa-reference.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "common/*": [
        "./src/*"
      ]
    },
    "outDir": "./build"
  },
  "sources": [
    "./src/types/api/**/*.ts"
  ],
  "jsdoc": {
    "enabled": true
  }
}