{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noEmit": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "common/*": [
        "./src/*"
      ],
      "common/schema/types": [
        "./src/schema/types.ts"
      ],
      "common/src/schema/types": [
        "./src/schema/types.ts"
      ],
      "common/src/types/api/*": [
        "./src/types/api/*"
      ],
      "@/*": [
        "../backend/src/*"
      ]
    }
  },
  "include": [
    "./src/controllers/**/*.ts",
    "./src/types/**/*.ts",
    "./src/schema/**/*.ts",
    "./src/auth/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}